# Desafios
using System;
using System.Diagnostics;

namespace Desafios
{
    class Desafio001 
    {
        
        public static void Main(string [] args)
        {
            private int valor;
            private int dobro;
            private int triplo;
            private double raiz;

            public int Valor { get => valor; set => valor = value; }
            public int Dobro { get => valor; set => valor = value; }
            public int Triplo { get => valor; set => valor = value; }
            public double Raiz { get => valor; set => valor = value; }

            Console.Write("Informe o valor: ");
            valor = Console.ReadLine();

	        dobro = (2*valor);
            triplo = (3*valor);
            raiz = Convert.ToSingle(Math.Sqrt(valor));
            
            Console.WriteLine("Dobro: " + dobro);
            Console.WriteLine("Triplo: " + triplo);
            Console.WriteLine("Raiz: " + raiz);
        }
    }
}
